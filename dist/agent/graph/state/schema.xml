<?xml version="1.0" encoding="utf-8" ?>
<schema name="graph_state" version="1.5">
  <fields>
    <field name="graph_key" type="string" indexed="true" stored="false"></field>
    <field name="agent_key" type="string" indexed="true" stored="false"></field>
    <!-- All of these fields are required by Riak Search-->
    <field name="_yz_id" type="_yz_str" indexed="true" stored="true" required="true" multiValued="false"></field>
    <field name="_yz_ed" type="_yz_str" indexed="true" stored="false" multiValued="false"></field>
    <field name="_yz_pn" type="_yz_str" indexed="true" stored="false" multiValued="false"></field>
    <field name="_yz_fpn" type="_yz_str" indexed="true" stored="false" multiValued="false"></field>
    <field name="_yz_vtag" type="_yz_str" indexed="true" stored="false" multiValued="false"></field>
    <field name="_yz_rk" type="_yz_str" indexed="true" stored="true" multiValued="false"></field>
    <field name="_yz_rt" type="_yz_str" indexed="true" stored="true" multiValued="false"></field>
    <field name="_yz_rb" type="_yz_str" indexed="true" stored="true" multiValued="false"></field>
    <field name="_yz_err" type="_yz_str" indexed="true" stored="true" multiValued="false"></field>
    <dynamicField name="*" type="ignored"></dynamicField>
  </fields>
  <uniqueKey>_yz_id</uniqueKey>
  <types>
    <!-- YZ String: Used for non-analyzed fields-->
    <fieldType name="_yz_str" sortMissingLast="true" class="solr.StrField"></fieldType>
    <fieldType name="string" sortMissingLast="true" class="solr.StrField"></fieldType>
    <!-- since fields of this type are by default not stored or indexed, any data-->
    <!-- added to them will be ignored outright.-->
    <fieldtype name="ignored" stored="false" indexed="false" multiValued="true" class="solr.StrField"></fieldtype>
  </types>
</schema>