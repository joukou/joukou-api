doctype xml
schema(name='agent' version='1.5')
  fields
    field(name='name' type='string' indexed='true' stored='false')
    field(name='agents.key' type='string' indexed='true' stored='false' multiValued='true')
    field(name='agents.role' type='string' indexed='true' stored='false' multiValued='true')

    // All of these fields are required by Riak Search
    field(name='_yz_id' type='_yz_str' indexed='true' stored='true' required='true' muliValued='false')
    field(name='_yz_ed' type='_yz_str' indexed='true' stored='false' muliValued='false')
    field(name='_yz_pn' type='_yz_str' indexed='true' stored='false' muliValued='false')
    field(name='_yz_fpn' type='_yz_str' indexed='true' stored='false' muliValued='false')
    field(name='_yz_vtag' type='_yz_str' indexed='true' stored='false' muliValued='false')
    field(name='_yz_rk' type='_yz_str' indexed='true' stored='true' muliValued='false')
    field(name='_yz_rt' type='_yz_str' indexed='true' stored='true' muliValued='false')
    field(name='_yz_rb' type='_yz_str' indexed='true' stored='true' muliValued='false')
    field(name='_yz_err' type='_yz_str' indexed='true' stored='true' muliValued='false')

    dynamicField(name='*' type='ignored')
  uniqueKey _yz_id
  types
    // YZ String: Used for non-analyzed fields
    fieldType(name='_yz_str' class='solr.StrField' sortMissingLast='true')
    fieldType(name='string' class='solr.StrField' sortMissingLast='true')
    // since fields of this type are by default not stored or indexed, any data
    // added to them will be ignored outright.
    fieldtype(name='ignored' stored='false' indexed='false' multiValued='true' class='solr.StrField')